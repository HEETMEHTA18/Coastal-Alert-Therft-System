{
  "name": "ctas-frontend",
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "VITE_API_URL": "https://ctas-backend-api.onrender.com",
    "VITE_MAPBOX_ACCESS_TOKEN": "@mapbox-token",
    "VITE_GOOGLE_MAPS_API_KEY": "@google-maps-key",
    "VITE_OPENWEATHER_API_KEY": "@openweather-key"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://ctas-backend-api.onrender.com",
      "VITE_MAPBOX_ACCESS_TOKEN": "@mapbox-token",
      "VITE_GOOGLE_MAPS_API_KEY": "@google-maps-key", 
      "VITE_OPENWEATHER_API_KEY": "@openweather-key"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://ctas-backend-api.onrender.com/api/$1"
    },
    {
      "src": "/(.*\\.[a-zA-Z0-9]*$)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}